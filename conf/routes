# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home controller
GET     /                           controllers.HomeController.index

# Record controller
GET     /phones                     controllers.RecordController.list
POST    /phone/:name/:number        controllers.RecordController.insert(name: String, number: String)
PUT     /updatename/:id/:name       controllers.RecordController.updateName(id: Long, name: String)
PUT     /updatenumber/:id/:number   controllers.RecordController.updateNumber(id: Long, number: String)
#DELETE  /phone/:id                  controllers.RecordController.deleteRecord(id: Long)
#GET     /phones/:name               controllers.RecordController.getAllByName(name: String)
#GET     /phones/:number             controllers.RecordController.getAllByNumber(number: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#->      /phones                     phones.RecordController