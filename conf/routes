# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /phones                     controllers.RecordController.list
POST    /phone/:name/:number        controllers.RecordController.insert(name: String, number: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#->      /phones                     phones.RecordController
#PUT     /phone/:id/:name            controllers.RecordController.updateName(id: Long, name: String)
#PUT     /phone/:id/:number          controllers.RecordController.updateName(id: Long, number: Int)
#DELETE  /phone/:id                  controllers.RecordController.